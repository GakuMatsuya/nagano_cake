<%= render "layouts/admin_header" %>
<div class="container">
  <div class="row">
    <div class="mt-3 bg-light"><h5><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h5></div>
  </div>
  
  <div class="row mt-3">
    <div class="col-3"><p>会員ID</p></div>
    <div class="col-3"><%= @customer.id %></div>
  </div>
  
<%= form_with model: @customer, url: admin_customer_path(@customer), local: true do |f| %>

  <div class="row mt-3">
    <div class="col-3"><p>名前</p></div>
    <div class="col-3"> (姓) <%= f.text_field :last_name %></div>
    <div class="col-3"> (名) <%= f.text_field :first_name%></div>
  </div>

  <div class="row mt-3">
    <div class="col-3"><p>フリガナ</p></div>
    <div class="col-3">(セイ)<%= f.text_field :last_name_kana %></div>
    <div class="col-3">(メイ)<%= f.text_field :first_name_kana %></div>
  </div>

  <div class="row mt-3">
    <div class="col-3"><p>メールアドレス</p></div>
    <div class="col-3"><%= f.email_field :email %></div>
  </div>

  <div class="row mt-3">
    <div class="col-3"><p>郵便番号(ハイフンなし)</p></div>
    <div class="col-3"><%= f.text_field :postal_code %></div>
  </div>

  <div class="row mt-3">
    <div class="col-3"><p>住所</p></div>
    <div class="col-3"><%= f.text_field :address %></div>
  </div>

  <div class="row mt-3">
    <div class="col-3"><p>電話番号(ハイフンなし)</p></div>
    <div class="col-3"><%= f.text_field :telephone_number %></div>
  </div>
  
  <div class="row mt-3">
    <div class="col-3"><p>会員ステータス</p></div>
    <div class="col-3">
      <%= f.radio_button :is_active, "effectiveness" %>
      <%= f.label :is_active, "有効", {value: :TRUE} %>
      <%= f.radio_button :is_active, "withdrawn" %>
      <%= f.label :is_active, "退会", {value: :TRUE} %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="btn btn-sm btn-wrape btn-success offset-3 col-2">
      <%= f.submit "変更を保存", :class=>"btn text-white" %>
    </div>
  </div>
  <% end %>