<%= render "layouts/admin_header" %>
<div class="container">
  <div class="row">
    <div class="mt-3 bg-light"><h5><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h5></div>
  </div>

  <div class="row mt-4">
    <div class="col-2"><p>会員ID</p></div>
    <div class="col-8"><%= @customer.id %></div>
  </div>

  <div class="row mt-3">
    <div class="col-2"><p>氏名</p></div>
    <div><%= @customer.last_name %></div>
    <div class="col-1"><%= @customer.first_name %></div>
  </div>

  <div class="row mt-3">
    <div class="col-2"><p>フリガナ</p></div>
    <div><%= @customer.last_name_kana %></div>
    <div class="col-1"><%= @customer.first_name_kana %></div>
  </div>

  <div class="row mt-3">
    <div class="col-2"><p>郵便番号</p></div>
    <div class="col-8"><%= @customer.postal_code %></div>
  </div>

  <div class="row mt-3">
    <div class="col-2"><p>住所</p></div>
    <div class="col-8"><%= @customer.address %></div>
  </div>

  <div class="row mt-3">
    <div class="col-2"><p>電話番号</p></div>
    <div class="col-8"><%= @customer.telephone_number %></div>
  </div>

  <div class="row mt-3">
    <div class="col-2"><p>メールアドレス</p></div>
    <div class="col-8"><%= @customer.email %></div>
  </div>

  <div class="row mt-3">
    <div class="col-2"><p>会員ステータス</p></div>
    <div class="col-8"><%= @customer.is_active_i18n %></div>
  </div>


  <div class="row">
  <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success btn-sm btn-block col-2 offset-2" %>
  <%= link_to "注文履歴一覧を見る", orders_path, class: "btn btn-primary btn-sm btn-block col-3 offset-1" %>
  </div>

</div>

