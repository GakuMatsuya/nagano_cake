<%= render "layouts/admin_header" %>
<div class="container">
  <div class="row">
    <div class="mt-3 bg-light"><h5>商品詳細</h5></div>
  </div>

  <div class="row">
    <div class="col-2">
      <%= attachment_image_tag @item, :image, :fill, 60, 60, size: "150x150" %>
    </div>

  <div class="col-10">
    <div class=row>
      <div class="col-2"><p>商品名</p></div>
      <div class="col-8"><%= @item.name %></div>
    </div>

    <div class=row>
      <div class="col-2"><p>商品説明</p></div>
      <div class="col-8"><%= @item.introduction %></div>
    </div>

    <div class=row>
      <div class="col-2"><p>ジャンル</p></div>
      <div class="col-8"><%= @item.genre.name %></div>
    </div>

    <div class=row>
      <div class="col-2"><p>税込価格</br>(税抜価格)</p></div>
      <div class="col-8"><%= addTax(@item.price)%></br> (<%= @item.price %>)</div>
    </div>

    <div class=row>
      <div class="col-2"><p>販売ステータス</p></div>
      <div class="col-8"><%= @item.is_active_i18n %></div>
    </div>

    <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success btn-sm btn-block col-2" %>
  </div>
 </div>
