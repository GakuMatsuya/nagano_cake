<div class="container">
  <div class="row">
    <div class="mt-3 bg-light"><h5>注文履歴一覧</h5></div>
  </div>
  
  <table class="table mt-3">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
        <td><%= order.ordered_item.amount %></td>
        <td><%= order.payment_method_i18n %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>