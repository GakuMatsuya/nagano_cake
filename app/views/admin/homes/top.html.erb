<h2>注文履歴一覧</h2>

<table class="table">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <th><%= order.created_at %></th>
      <th><%= order.name%></th>
      <th><%= ordered_items.amount %></th>
      <th><%= order.status %></th>
    </tr>
    <% end %>
  </tbody>
</table>
