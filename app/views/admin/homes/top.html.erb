<div class="container">
  <div class="row">
    <div class="mt-3 bg-light"><h5>注文履歴一覧</h5></div>
  </div>

  <table class="table mt-3">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
  
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <th><%= order.created_at %></th>
        <th><%= order.name %></th>
        <th><%= ordered_items.amount %></th>
        <th><%= order.status %></th>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>