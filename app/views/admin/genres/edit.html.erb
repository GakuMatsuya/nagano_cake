<%= render "layouts/admin_header" %>
<div class="container">
  <div class="row">
    <div class="mt-3 mb-5 bg-light"><h5>ジャンル編集</h5></div>
  </div>

  <%= form_with model: @genre, url: admin_genre_path(@genre.id), local: true do |f| %>
  <div class="row">
    <div class="col-2"><p>ジャンル名</p></div>
    <div class="col-3"><%= f.text_field :name %></div>
    <div class="btn btn-sm btn-wrape btn-success">
      <%= f.submit "変更を保存", :class=>"btn text-white" %>
    </div>
  <% end %>
  </div>
</div>

