<div class="container">
  <div class="row">
     <div class="mt-3 bg-light"><h5>ジャンル一覧・追加</h5></div>
  </div>

  <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
  <div class="row mt-3">
    <div class=col-3>
      <p>ジャンル名</p>
      <%= f.text_field :name %>
    </div>
    <div class="btn btn-sm btn-wrape btn-success mt-4">
      <%= f.submit "新規登録", :class=>"btn text-white" %>
    </div>
  </div>
  <% end %>


  <table class="table mt-5 col-4">
    <thead>
      <tr>
        <th>ジャンル</th>
      </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
      <tr>
       <td><%= genre.name %></td>
       <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>