<%= render "layouts/customer_header" %>
<div class="container">
  <div class="row offset-1">
    <div class="mt-3 bg-light"><h5>配送先一覧/登録</h5></div>
  </div>

  <%= form_with model: @address, url: addresses_path, local:true do |f| %>
  <div class="row mt-3">
    <div class="col-3"><p>郵便番号(ハイフンなし)</p></div>
    <div class="col-3"><%= f.text_field :postal_code %></div>
  </div>

  <div class="row mt-3">
    <div class="col-3"><p>住所</p></div>
    <div class="col-3"><%= f.text_field :address %></div>
  </div>

  <div class="row mt-3">
    <div class="col-3"><p>宛名</p></div>
    <div class="col-3"><%= f.text_field :name %></div>
    <div class="btn btn-sm btn-wrape btn-success mt-4 py-0">
      <%= f.submit "新規登録", :class=>"btn text-white" %>
    </div>
  </div>
  <% end %>
  
  <table border="1" class="table mt-5" style="width: 700px">
    <thead class="thead-light">
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
    
    <tbody>
      <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-wrape btn-success" %>
          <%= link_to "削除する", address_path(address), method: :delete, class: "btn btn-wrape btn-danger" %>
        </td>
      </tr>
      <% end %>
    </tbody>
    
  </table>