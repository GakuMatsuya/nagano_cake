<div class="container">
  <div class="row offset-1">
    <div class="mt-3 bg-light"><h5>注文情報入力</h5></div>
  </div>

  <%= form_with model: @order, url:'/orders/confirm', local:true do |f| %>
  <div>
    <h6 class="mt-3"><b>支払方法</b></h6>
      <div>
        <%= f.radio_button :payment_method, 0 %>
        <%= f.label :payment_method, "クレジットカード", {value: 0} %>
      </div>
      <div>
        <%= f.radio_button :payment_method, 1 %>
        <%= f.label :payment_method, "銀行振込", {value: 1} %>
      </div>
  </div>

  <div class="mt-3">
    <h6><b>お届け先</b></h6>
      <div>
        <%= f.radio_button :address, :address %>
        <%= f.label :address, "ご自身の住所", {value: :address} %> </br>
      </div>
      <div class="mt-2">
        <%= f.radio_button :address, :address %>
        <%= f.label :address, "登録済み住所から選択", {value: :address} %> </br>
      </div>
      <div class="mt-2">
        <%= f.radio_button :address, :address %>
        <%= f.label :address, "新しいお届け先", {value: :address} %> </br>
          <div class="row">
            <div class="col-3"><p>郵便番号(ハイフンなし)</p></div>
            <div class="col-1"><%= f.text_field :address %></div>
          </div>
          <div class="row mt-3">
            <div class="col-3"><p>住所</p></div>
            <div class="col-3"><%= f.text_field :address %></div>
          </div>
          <div class="row mt-3">
            <div class="col-3"><p>宛名</p></div>
            <div class="col-3"><%= f.text_field :address %></div>
          </div>
      </div>
  </div>
  
  <div class="row offset-4 mt-3">
    <div class="btn btn-sm btn-wrape btn-primary">
      <%= f.submit "確認画面へ進む", :class=>"btn text-white" %>
    </div>
  </div>

  <% end %>

</div>