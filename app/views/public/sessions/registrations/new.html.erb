<div class="container">
  <div class="row">
    <div class="mt-3 bg-light"><h5>新規会員登録</h5></div>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="row mt-3">
    <div class="col-3"><p>名前</p></div>
    <div class="col-3"> (姓) <%= f.text_field :last_name %></div>
    <div class="col-3"> (名) <%= f.text_field :first_name%></div>
  </div>

  <div class="row mt-3">
    <div class="col-3"><p>フリガナ</p></div>
    <div class="col-3">(セイ)<%= f.text_field :last_name_kana %></div>
    <div class="col-3">(メイ)<%= f.text_field :first_name_kana %></div>
  </div>

  <div class="row mt-3">
    <div class="col-3"><p>メールアドレス</p></div>
    <div class="col-3"><%= f.email_field :email %></div>
  </div>

  <div class="row mt-3">
    <div class="col-3"><p>郵便番号(ハイフンなし)</p></div>
    <div class="col-3"><%= f.text_field :postal_code %></div>
  </div>

  <div class="row mt-3">
    <div class="col-3"><p>住所</p></div>
    <div class="col-3"><%= f.text_field :address %></div>
  </div>

  <div class="row mt-3">
    <div class="col-3"><p>電話番号(ハイフンなし)</p></div>
    <div class="col-3"><%= f.text_field :telephone_number %></div>
  </div>

  <div class="row mt-3">
    <div class="col-3"><p>パスワード(6文字以上)</p></div>
    <div class="col-3"><%= f.text_field :password %></div>
  </div>

  <div class="row mt-3">
    <div class="col-3"><p>パスワード(確認用)</p></div>
    <div class="col-3"><%= f.text_field :password_confirmation %></div>
  </div>

  <div class="row mt-3">
    <div class="btn btn-sm btn-wrape btn-success offset-3 col-2">
      <%= f.submit "新規登録", :class=>"btn text-white" %>
    </div>
  </div>
  <% end %>
  
  <div class="row">
    <div class="mt-3 bg-light"><h5>既に登録済みの方</h5></div>
  </div>
  
   <div class="row mt-3 offset-1 col-5">
  <%= link_to "こちら", new_customer_registration_path %> <p>からログインしてください</p>
  </div>
</div>