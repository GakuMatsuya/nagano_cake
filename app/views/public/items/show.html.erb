<%= render "layouts/customer_header" %>
<div class="container">
  <div class="row mt-5 offset-1">
    <div class="col-3">
      <%= attachment_image_tag @item, :image, :fill, 60, 60, size: "150x150" %>
    </div>

    <div class="col-7">
      <div class="row">
        <h4><%= @item.name %></h4>
      </div>

      <div class="row mt-3">
        <%= @item.introduction %>
      </div>

      <div class="row mt-4">
        ￥<%= addTax(@item.price) %>(税込)
      </div>
    </div>
  </div>

    <%= form_with model: CartItem.new, url: cart_items_path, local:true  do |f| %>
    <div class="row offset-4">
      <div class="co"><%= f.select :amount,[["1"], ["2"], ["3"], ["4"], ["5"], ["6"], ["7"], ["8"], ["9"]], include_blank: "個数選択" %></div>
      <%= f.hidden_field :item_id, :value => @item.id %>
      <div class="col-1"></div><%= f.submit "カートに入れる", :class => "btn btn-success btn-sm btn-block col-2" %></div>
    </div>
    <% end %>
    </div>