<div class="container">
  <div class="row mt-4">
    <h2>商品一覧</h2>
  <div class="mt-3"><p>(全<%= @items.count %>件)</p></div>  
  </div>

<div class="row">
  <% @items.each do |item| %>
  <div class="col-3 mt-4">
    <div>
      <%= attachment_image_tag item, :image, :fill, 60, 60, size: "150x150" %> </br>
      <%= item.name %> </br>
      ￥<%= item.price %> </br>
    </div>
  </div>
<% end %>
</div>

</div>