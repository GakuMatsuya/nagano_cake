<div class="container">
  <div class="row offset-1">
    <div class="mt-3 bg-light"><h5>マイページ</h5></div>
  </div>

  <div class="row mt-5">
    <h5 class="col-2"><b>登録情報</b></h5>
    <%= link_to "編集する", edit_customer_path(@customer), class: "btn btn-sm btn-wrape btn-success text-white" %>
  </div>

  <table border="1" class="table mt-3" style="width: 600px">
    <tr>
      <th class="bg-light">氏名</th>
      <td><%= @customer.last_name %> <%= @customer.first_name %></td>
    </tr>
    <tr>
      <th class="bg-light">カナ</th>
      <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th class="bg-light">郵便番号</th>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th class="bg-light">住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th class="bg-light">電話番号</th>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th class="bg-light">メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
  </table>
  
  <div class="row mt-5">
    <h5 class="col-2"><b>配送先</b></h5>
    <%= link_to "一覧を見る", addresses_path, class: "btn btn-sm btn-wrape btn-primary text-white" %>
  </div>
  
  <div class="row mt-3">
    <h5 class="col-2"><b>注文履歴</b></h5>
    <%= link_to "一覧を見る", orders_path, class: "btn btn-sm btn-wrape btn-primary text-white" %>
  </div>